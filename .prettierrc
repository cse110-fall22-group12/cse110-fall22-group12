{
  "semi": false,
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 100,
  "bracketSpacing": false,
  "bracketSameLine": false,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "tabWidth": 2,
        "singleQuote": false
      }
    },
    {
      "files": "*.js",
      "options": {
        "semi": true,
        "singleQuote": true
      }
    },
    {
      "files": "*.css",
      "options": {
        "semi": true,
        "singleQuote": false
      }
    }
  ]
}
